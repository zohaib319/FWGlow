<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity2" >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="@drawable/bg_4"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/imageView4"
        map:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/button2"
        android:layout_width="292dp"
        android:layout_height="73dp"
        android:background="@drawable/home_front"
        android:drawableRight="@drawable/arrow2"
        android:paddingRight="50dp"
        android:text="User Name"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.077" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/dp_box"
        map:layout_constraintBottom_toBottomOf="@+id/button2"
        map:layout_constraintEnd_toEndOf="@+id/button2"
        map:layout_constraintHorizontal_bias="0.078"
        map:layout_constraintStart_toStartOf="@+id/button2"
        map:layout_constraintTop_toTopOf="@+id/button2"
        map:layout_constraintVertical_bias="0.434" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="157dp"
        android:layout_height="159dp"
        android:background="@drawable/dp_box"
        map:layout_constraintBottom_toTopOf="@+id/textView16"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.505"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/button2"
        map:layout_constraintVertical_bias="0.798" />


    <Button
        android:id="@+id/btn_rating"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:text="Rate"
        android:textColor="#ffffff"
        map:layout_constraintBottom_toBottomOf="@+id/imageView"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/rating_bar"
        map:layout_constraintVertical_bias="0.896" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="18dp"
        android:text="Your Bill"
        android:textColor="#ffffff"
        android:textSize="15dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.183"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/rating_bar"
        map:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="104dp"
        android:layout_height="34dp"
        android:text="Vendor"
        android:textColor="#ffffff"
        android:textSize="30dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.501"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.518" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="18dp"
        android:text="PKR 1,000"
        android:textColor="#ffffff"
        android:textSize="15dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.824"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/rating_bar"
        map:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="359dp"
        android:layout_height="86dp"
        android:text="How was you Experience with this vendor?"
        android:textColor="#d7b26d"
        android:textSize="30dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.506"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/textView16"
        map:layout_constraintVertical_bias="0.082" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#d7b26d"
        android:stepSize="0.5"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/textView19"
        map:layout_constraintVertical_bias="0.082" />
</androidx.constraintlayout.widget.ConstraintLayout>
</fragment>